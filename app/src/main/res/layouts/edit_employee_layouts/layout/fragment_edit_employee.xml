<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/edit_training" android:layout_width="103dp"
        android:layout_height="21dp" android:layout_marginTop="208dp" android:text="Training:"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

    <EditText android:id="@+id/edit_email" android:layout_width="250dp" android:layout_height="44dp"
        android:layout_marginTop="152dp" android:fontFamily="sans-serif-light"
        android:inputType="textAutoComplete" android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

    <ImageView android:id="@+id/user_icon" android:layout_width="54dp" android:layout_height="55dp"
        android:layout_marginTop="4dp" android:tint="#000000"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/defaultemployee_pic" />

    <ImageView android:id="@+id/email_icon" android:layout_width="54dp" android:layout_height="46dp"
        android:layout_marginTop="148dp" android:tint="#000000"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <EditText android:id="@+id/edit_first_name" android:layout_width="250dp"
        android:layout_height="44dp" android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-light" android:inputType="textAutoComplete"
        android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText android:id="@+id/edit_last_name" android:layout_width="250dp"
        android:layout_height="44dp" android:layout_marginTop="88dp"
        android:fontFamily="sans-serif-light" android:inputType="textAutoComplete"
        android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/enter_first_name" android:layout_width="103dp"
        android:layout_height="21dp" android:layout_marginTop="4dp"
        android:text="@string/enter_first_name" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/enter_email" android:layout_width="103dp"
        android:layout_height="21dp" android:layout_marginTop="132dp"
        android:text="@string/enter_email" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/enter_last_name" android:layout_width="103dp"
        android:layout_height="21dp" android:layout_marginTop="68dp"
        android:text="@string/enter_last_name" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button android:id="@+id/save_fields" android:layout_width="167dp" android:layout_height="56dp"
        android:layout_marginBottom="68dp" android:text="@string/save_changes"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent" />

    <Button android:id="@+id/button_to_addAvailability" android:layout_width="146dp"
        android:layout_height="57dp" android:text="availability"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/save_fields"
        app:layout_constraintHorizontal_bias="0.457" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/save_fields"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner android:id="@+id/spinner_training" android:layout_width="179dp"
        android:layout_height="44dp" android:layout_marginTop="228dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>