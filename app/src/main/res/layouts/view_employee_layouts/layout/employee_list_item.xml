<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView android:id="@+id/tvEmployeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:drawableBottom="?android:attr/listDivider"
        android:fadingEdge="horizontal"
        android:includeFontPadding="false"
        android:paddingTop="12dp"
        android:text="hello"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/viewMoreBtn"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:clickable="false"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_more"
        android:tint="#000000" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expanded_info"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/replace_with_availability"
            android:layout_width="145dp"
            android:layout_height="188dp"
            android:layout_weight="1"
            android:text="@string/availability_image_goes_here"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.612" />

        <TextView
            android:id="@+id/tvEmployeeContact"
            android:layout_width="234dp"
            android:layout_height="21dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_weight="1"
            android:text="@string/email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.169" />

        <Button
            android:id="@+id/delete_employee"
            android:layout_width="162dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="@string/delete"
            app:backgroundTint="#DC3D3D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.924"
            />

        <Button
            android:id="@+id/edit_employee"
            android:layout_width="162dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="@string/edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.106"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.959"
            />

        <TextView
            android:id="@+id/training_status"
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:text="TRAINING STATUS:\n"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.423" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>