<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.viewSchedule.ScheduleViewFragment" android:orientation="vertical">

    <FrameLayout android:id="@+id/container_calendar" android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/curSched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:text="Currently Scheduled: " />

    <fragment android:id="@+id/schedule_list"
        android:name="com.app.borgapplication.ui.schedule.viewSchedule.ShiftInformationFragment"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"/>

    <Button
        android:id="@+id/edit_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="EDIT SCHEDULE" />
    <!--    <FrameLayout-->
    <!--        android:id="@+id/container_information"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"/>-->

</LinearLayout>