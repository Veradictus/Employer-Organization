<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="horizontal" android:padding="1dp">

        <TextView android:id="@+id/text_view_shift" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="0.3" android:text="OPEN"
            android:textSize="18sp" android:textStyle="bold" />

        <TextView android:id="@+id/text_view" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1" android:text="Name"
            android:textSize="18sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>